---
// /src/components/Select.astro
interface Option {
  value: string;
  label: string;
}

interface Props {
  id: string;
  label?: string;
  options: Option[];
  defaultValue?: string;
  className?: string;
  style?: string;
}

const { id, label, options, defaultValue, className = "", style = "" } = Astro.props;
---

<div class={`flex items-center gap-x-2 ${className}`} style={style}>
  {label && <label for={id} class="text-sm font-medium text-neutral-500 whitespace-nowrap">{label}</label>}
  
  <div class="relative group w-full">
    <select
      id={id}
      name={id}
      data-reusable-select
      class="appearance-none w-full bg-white pl-3 pr-10 py-2 border border-neutral-300 rounded-xl text-sm text-neutral-800 focus:outline-none focus:ring-2 focus:ring-yellow-400 cursor-pointer transition-all hover:border-neutral-400"
    >
      {options.map((opt) => (
        <option value={opt.value} selected={opt.value === defaultValue}>
          {opt.label}
        </option>
      ))}
    </select>
    
    <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3 text-neutral-400 group-hover:text-neutral-600">
      <div class="i-material-symbols-keyboard-arrow-down-rounded text-base"></div>
    </div>
  </div>
</div>