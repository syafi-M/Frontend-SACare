---
// src/pages/layanan/index.astro
import Layout from '../../layouts/Layout.astro';
import Select from '../../components/Select.astro';
import { SORT_OPTIONS } from '../../types/service';
import ServiceGrid from '../../components/ServiceGrid.astro';

// 1. Ambil kategori dari URL Search Params
const category = Astro.url.searchParams.get('category');
---

<Layout title="Layanan SACare">
  <div m="5 t-8" pb-32>
    <!-- Header Section -->
    <div mb-8 class="animate-fade-in animate-duration-400">
      <p font-semibold uppercase text="neutral-500/70 sm" tracking-wide>
        Services • Jakarta {category && `• ${category}`}
      </p>
      <h1 text="4xl neutral-900" font-black mt-2 tracking-tight>Browse Services</h1>
    </div>

    <!-- Filter Section -->
    <Select
      id="sort-filter"
      label="Sort By:"
      options={[...SORT_OPTIONS]}
      mb-8
      class="animate-fade-in animate-duration-400 animate-delay-200"
    />

    <!-- Grid Section -->
    <div
      id="services-list"
      mt-4 grid="~ cols-1 md:cols-2 lg:cols-3" gap-6
      class="stagger-load"
    >
      <ServiceGrid server:defer category={category}>
        <div slot="fallback" contents>
          <!-- Skeleton Loading yang Identik dengan ServiceCard -->
          {[1, 2, 3, 4, 5, 6].map(() => (
            <div bg-white rounded-2xl border="~ neutral-100" overflow-hidden shadow-sm>
              <div h-64 bg-neutral-200 class="animate-pulse"></div>
              <div p-6 space-y-4>
                <div h-5 bg-neutral-200 w-3/4 rounded-lg class="animate-pulse"></div>
                <div h-4 bg-neutral-100 w-full rounded-lg class="animate-pulse"></div>
                <div flex="~ justify-between items-center" pt-4 border="t neutral-50">
                  <div h-6 bg-neutral-200 w-24 rounded-lg class="animate-pulse"></div>
                  <div h-8 bg-neutral-200 w-20 rounded-lg class="animate-pulse"></div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </ServiceGrid>
    </div>

    <!-- Loading Indicator untuk Sorting -->
    <div
      id="loading-indicator"
      hidden fixed inset-0 z-60
      flex="~ items-center justify-center" 
      bg="black/10" backdrop="blur-sm"
    >
      <div flex="~ col items-center gap-4" bg-white p-8 rounded-3xl shadow-2xl>
        <div w-12 h-12 border="4 neutral-100 t-yellow-500" rounded-full class="animate-spin"></div>
        <p text-neutral-600 font-bold>Memperbarui...</p>
      </div>
    </div>
  </div>

  <!-- Service Detail Modal (Compact) -->
  <div
    id="service-modal"
    class="hidden fixed inset-0 z-50 flex items-end sm:items-center justify-center bg-black/40 backdrop-blur-sm transition-opacity duration-300"
    onclick="if(event.target.id === 'service-modal') window.closeServiceModal()"
  >
    <div
      id="modal-content"
      bg-white w="full sm:max-w-md" mx-auto
      max-h="[85vh]" overflow-y-auto shadow-2xl
      class="sm:rounded-3xl rounded-t-3xl transform transition-transform duration-300"
    >
      <!-- Modal Header -->
      <div sticky top-0 z-10 bg-white p-4 border="b neutral-100" flex="~ items-center justify-between">
        <h2 id="modal-title" text-xs font-black uppercase tracking-widest text-neutral-400>Detail Layanan</h2>
        <button onclick="window.closeServiceModal()" p-1 hover="bg-neutral-100" rounded-full transition-colors>
          <div class="i-ph-x-bold text-xl text-neutral-500"></div>
        </button>
      </div>

      <!-- Modal Body -->
      <div p-5 space-y-5>
        <div relative rounded-xl overflow-hidden bg-neutral-100 aspect-video>
          <img id="modal-image" src="" alt="" w-full h-full object-cover />
          <div id="modal-badge" hidden absolute top-3 left-3 p="x-3 y-1" bg="yellow-500/90" backdrop="blur-md" rounded-full>
            <span text="[10px] neutral-900" font-black flex="~ items-center gap-1" uppercase>
              <div class="i-ph-crown-simple-fill"></div> Most Booked
            </span>
          </div>
        </div>

        <div text-center sm:text-left>
          <h1 id="modal-service-name" text="2xl neutral-900" font-black leading-tight>Nama Layanan</h1>
          <p id="modal-service-description" text="neutral-500 sm" leading-relaxed mt-2>Deskripsi...</p>
        </div>

        <!-- Price Section -->
        <div p-4 rounded-xl border="~ neutral-100" bg-neutral-50 flex="~ justify-between items-center">
          <div>
            <p text="[10px] neutral-400" font-bold uppercase tracking-tighter>Estimasi Harga</p>
            <span id="modal-price" text="2xl yellow-600" font-black>Rp 0</span>
          </div>
          <span text="xs neutral-400" font-medium>/ sesi</span>
        </div>

        <!-- Grid Info -->
        <div grid="~ cols-2" gap-3>
           <div p-3 bg-white border="~ neutral-100" rounded-xl flex="~ items-center gap-2">
              <div class="i-ph-users-three-bold text-yellow-500 lg"></div>
              <p text="[11px] neutral-900" font-bold>Pro Team</p>
           </div>
           <!-- Tambahkan item grid lainnya di sini -->
        </div>

        <button 
          onclick="window.addToCartFromModal()"
          w-full py-4 bg-neutral-900 text-white font-bold rounded-2xl
          active="scale-95" transition-all shadow="lg shadow-neutral-200"
          flex="~ items-center justify-center gap-2"
        >
          <div class="i-ph-shopping-cart-simple-bold"></div>
          <span>Add to Cart</span>
        </button>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { actions } from 'astro:actions';
  import { serviceApi } from '../../services/serviceApi';
  import { cartManager } from '../../services/cartService';

  /**
   * UNO_SAFELIST: 
   * i-ph-check-circle-fill i-ph-crown-fill i-ph-star-fill text-green-400 text-yellow-500
   * fixed bottom-24 right-4 bg-neutral-900 text-white px-6 py-4 rounded-2xl shadow-2xl z-[60] 
   * flex items-center gap-3 animate-fade-in animate-fade-out font-bold text-sm
   * border border-neutral-200 rounded-2xl bg-white overflow-hidden group relative h-64 
   * w-full h-full object-cover transition-transform duration-500 group-hover:scale-110
   * absolute top-4 left-4 bg-yellow-500/90 backdrop-blur-md rounded-full px-3 py-1 shadow-md
   * text-[10px] font-bold text-neutral-900 flex items-center gap-1 uppercase italic
   * top-4 right-4 flex items-center gap-1 bg-white/90 backdrop-blur-md rounded-full px-2 py-1 shadow-sm
   * p-6 text-lg font-bold text-neutral-800 mb-2 text-neutral-500 text-sm line-clamp-2 mb-4
   * flex justify-between items-center pt-4 border-t border-neutral-100 text-lg font-black 
   * text-neutral-900 text-[10px] text-neutral-400 font-medium bg-neutral-900 text-white 
   * px-4 py-2 rounded-xl text-xs font-bold active:scale-95 transition-transform
   */

  let servicesCache = [];
  let currentServiceId = null;

  const getEls = () => ({
    selectEl: document.querySelector('#sort-filter'),
    container: document.querySelector('#services-list'),
    loadingIndicator: document.querySelector('#loading-indicator'),
    serviceModal: document.getElementById('service-modal')
  });

  async function init() {
    const { selectEl, container } = getEls();
    const urlParams = new URLSearchParams(window.location.search);
    const idFromUrl = urlParams.get('id');
    const currentCategory = urlParams.get('category');

    // 1. Sinkronisasi Data Awal
    servicesCache = window.servicesCache || [];

    const handleAutoOpen = async () => {
      if (idFromUrl) {
        const serviceId = parseInt(idFromUrl);
        // Tunggu sebentar jika data sedang loading dari tempat lain
        if (servicesCache.length === 0) {
           const { data } = await actions.getSortedServices({ sortBy: 'default', category: currentCategory });
           if (data) servicesCache = data;
        }
        window.openServiceModal(serviceId);
      }
    };

    // 2. Jalankan Auto Open
    handleAutoOpen();

    // 3. Event Listener untuk Sort Filter
    selectEl?.addEventListener('change', async (e) => {
      const { container, loadingIndicator } = getEls();
      const sortBy = e.target.value;

      loadingIndicator?.classList.remove('hidden');
      container?.classList.add('opacity-40', 'pointer-events-none');

      const { data, error } = await actions.getSortedServices({ sortBy, category: currentCategory });
      
      if (!error && data) {
        renderServices(data);
        // Beri jeda halus untuk animasi
        setTimeout(() => {
          container?.classList.remove('opacity-40', 'pointer-events-none');
          loadingIndicator?.classList.add('hidden');
        }, 300);
      }
    });
  }

  window.openServiceModal = async (serviceId) => {
    currentServiceId = serviceId;
    const { serviceModal } = getEls();
    if (!serviceModal) return;

    let service = servicesCache.find(s => s.id === serviceId);
    if (!service) service = await serviceApi.getServiceById(serviceId);
    if (!service) return;

    // Mapping UI
    const setContent = (id, text) => {
      const el = document.getElementById(id);
      if (el) el.textContent = text;
    };

    setContent('modal-title', service.name);
    setContent('modal-service-name', service.name);
    setContent('modal-service-description', service.description);
    setContent('modal-price', `Rp ${service.price.toLocaleString('id-ID')}`);
    
    const imgEl = document.getElementById('modal-image');
    if (imgEl) imgEl.src = service.img;

    // Badge Most Popular
    const badge = document.getElementById('modal-badge');
    if (servicesCache.length > 0 && badge) {
      const mostPopular = servicesCache.reduce((prev, curr) => (prev.rateCount || 0) > (curr.rateCount || 0) ? prev : curr);
      service.id === mostPopular.id ? badge.classList.remove('hidden') : badge.classList.add('hidden');
    }

    serviceModal.classList.remove('hidden', 'modal-hide');
    serviceModal.classList.add('modal-show');
    document.body.style.overflow = 'hidden';
  };

  window.closeServiceModal = () => {
    const { serviceModal } = getEls();
    if (!serviceModal) return;

    serviceModal.classList.add('modal-hide');
    setTimeout(() => {
      serviceModal.classList.add('hidden');
      serviceModal.classList.remove('modal-hide', 'modal-show');
      document.body.style.overflow = '';
      
      // Bersihkan URL dari parameter ID tanpa reload
      const url = new URL(window.location.href);
      url.searchParams.delete('id');
      window.history.replaceState({}, '', url);
    }, 300);
  };

  window.addToCartFromModal = () => {
    const service = servicesCache.find(s => s.id === currentServiceId);
    if (!service) return;
    cartManager.addToCart(service, 1, 1);
    showToast(`${service.name} masuk keranjang!`);
    window.closeServiceModal();
  };

  function showToast(message) {
    const toast = document.createElement('div');
    toast.className = 'fixed bottom-24 right-4 bg-neutral-900 text-white px-6 py-4 rounded-2xl shadow-2xl z-[60] flex items-center gap-3 animate-fade-in';
    // Menggunakan Phosphor Icons Check Circle
    toast.innerHTML = `<div class="i-ph-check-circle-fill text-green-400 text-xl"></div><span class="font-bold text-sm">${message}</span>`;
    document.body.appendChild(toast);
    setTimeout(() => {
      toast.classList.add('animate-fade-out');
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }

  function renderServices(services) {
    const { container } = getEls();
    if (!container) return;
    
    servicesCache = services;
    const mostPopularId = services.length > 0 
      ? services.reduce((p, c) => (p.rateCount || 0) > (c.rateCount || 0) ? p : c).id 
      : null;

    container.innerHTML = services.map((service, index) => {
      const isPopular = service.id === mostPopularId;
      
      return `
      <div 
        style="animation: fadeIn 0.4s ease-out ${index * 50}ms forwards; opacity: 0;" 
        onclick="window.openServiceModal(${service.id})"
        class="cursor-pointer"
      >
        <article class="group border border-neutral-200 rounded-2xl bg-white shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden h-full flex flex-col">
          <!-- Image Section -->
          <div class="relative overflow-hidden bg-neutral-100 h-64">
            <img 
              src="${service.img}" 
              alt="${service.name}" 
              class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:scale-110 rounded-t-xl"
            />

            ${isPopular ? `
              <div class="absolute top-4 left-4 px-3 py-1 bg-yellow-500/90 backdrop-blur-md rounded-full shadow-md animate-slide-in">
                <span class="text-xs font-semibold text-neutral-800 flex items-center gap-1">
                  <div class="i-ph-crown-simple-duotone text-base"></div>
                  Most Booked
                </span>
              </div>` : ''}

            <div class="absolute top-4 right-4 px-3 py-1 flex items-end gap-x-1 bg-white/90 backdrop-blur-md rounded-full shadow-md animate-slide-in">
              <div class="i-ph-star-fill text-[14px] text-yellow-500"></div>
              <span class="text-xs font-semibold text-neutral-800">${service.rate}</span>
              <span class="text-neutral-700/70 text-[10px]">(${service.rateCount})</span>
            </div>
          </div>

          <!-- Content Section -->
          <div class="p-6 flex flex-col flex-1">
            <div class="flex-grow mb-4">
              <h3 class="text-lg font-semibold text-neutral-800 mb-2 group-hover:text-neutral-900 transition-colors duration-200">
                ${service.name}
              </h3>
              <p class="text-neutral-600 text-sm line-clamp-2 group-hover:text-neutral-700 transition-colors duration-200">
                ${service.description}
              </p>
            </div>

            <div class="flex justify-between items-center pt-4 border-t border-neutral-100 group-hover:border-neutral-200 transition-colors duration-200">
              <p class="text-xl font-bold text-neutral-800 group-hover:text-neutral-900 transition-colors duration-200">
                Rp ${service.price.toLocaleString('id-ID')}
                <span class="text-xs text-neutral-500 font-normal"> / jam</span>
              </p>
              
              <button 
                class="flex items-center gap-2 px-4 py-2 bg-neutral-800 text-white rounded-lg hover:bg-neutral-900 transition-all duration-200 font-medium text-sm active:scale-95"
                onclick="event.stopPropagation(); window.openServiceModal(${service.id})"
              >
                <span>Details</span>
                <div class="i-ph-arrow-right-bold text-xs"></div>
              </button>
            </div>
          </div>
        </article>
      </div>
    `}).join('');
  }

  // selectEl?.addEventListener('change', async (e) => {
  //   const sortBy = e.target.value;
  //   loadingIndicator?.classList.remove('hidden');
  //   container?.classList.add('opacity-40', 'pointer-events-none');
  //   const { data, error } = await actions.getSortedServices({ sortBy, category: currentCategory });
  //   if (!error && data) {
  //     container?.classList.add('animate-fade-out');
  //     setTimeout(() => {
  //       renderServices(data);
  //       container?.classList.remove('animate-fade-out', 'opacity-40', 'pointer-events-none');
  //       loadingIndicator?.classList.add('hidden');
  //     }, 300);
  //   }
  // });

  // Best Practice untuk Astro View Transitions
  document.addEventListener('astro:page-load', init);
</script>
<style is:global>
  /* Animasi Masuk */
  .modal-show {
    display: flex !important;
  }
  .modal-show #modal-content {
    animation: slideUp 0.3s ease-out forwards;
  }

  /* Animasi Keluar */
  .modal-hide #modal-content {
    animation: slideDown 0.3s ease-in forwards;
  }
  .modal-hide {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease-in;
  }

  @keyframes slideUp {
    from { transform: translateY(100%); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  @keyframes slideDown {
    from { transform: translateY(0); opacity: 1; }
    to { transform: translateY(100%); opacity: 0; }
  }
</style>