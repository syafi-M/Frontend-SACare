---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Riwayat Pesanan">
  <div class="px-4 md:m-5 mt-8 max-w-4xl mx-auto pb-20">
    <div class="flex items-center gap-3 mb-6 md:mb-8">
      <a href="/cart" class="p-2 hover:bg-neutral-100 rounded-lg transition-colors">
        <div class="i-tabler-arrow-left text-xl md:text-2xl text-neutral-600"></div>
      </a>
      <h1 class="text-2xl md:text-3xl font-bold text-neutral-900">Riwayat Pesanan</h1>
    </div>

    <div id="history-container" class="space-y-4 md:space-y-6">
      <div class="animate-pulse flex flex-col gap-4">
        <div class="h-32 bg-neutral-100 rounded-2xl w-full"></div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { cartManager } from '../../services/cartService';

  const container = document.getElementById('history-container');

  function getStatusStyle(status: string) {
    switch (status) {
      case 'Completed': return 'bg-green-100 text-green-700 border-green-200';
      case 'On Progress': return 'bg-blue-100 text-blue-700 border-blue-200';
      case 'Cancelled': return 'bg-red-100 text-red-700 border-red-200';
      default: return 'bg-yellow-100 text-yellow-700 border-yellow-200';
    }
  }

  function renderHistory() {
    const orders = cartManager.getOrderHistory();

    if (orders.length === 0) {
      container!.innerHTML = `
        <div class="text-center py-16 md:py-20 bg-neutral-50 rounded-2xl border-2 border-dashed border-neutral-200 px-4">
          <div class="i-tabler-clipboard-list text-5xl text-neutral-300 mx-auto mb-4"></div>
          <p class="text-neutral-500 font-medium">Belum ada riwayat pemesanan</p>
          <a href="/services" class="text-yellow-600 text-sm mt-2 inline-block hover:underline">Cari layanan sekarang</a>
        </div>
      `;
      return;
    }

    container!.innerHTML = orders.map(order => `
      <div class="bg-white border border-neutral-200 rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-all">
        <div class="bg-neutral-50 px-4 md:px-6 py-3 md:py-4 border-b border-neutral-200 flex flex-wrap justify-between items-center gap-2">
          <div class="flex items-center gap-2 md:gap-3">
            <div class="hidden sm:block p-2 bg-white rounded-lg border border-neutral-200">
                <div class="i-tabler-hash text-neutral-400"></div>
            </div>
            <div>
              <p class="text-[9px] md:text-[10px] text-neutral-500 uppercase font-bold tracking-widest">Order ID</p>
              <p class="font-mono text-xs md:text-sm font-bold text-neutral-800">${order.id}</p>
            </div>
          </div>
          <span class="px-2.5 py-0.5 md:px-3 md:py-1 rounded-full text-[9px] md:text-[10px] font-bold uppercase border ${getStatusStyle(order.status)}">
            ${order.status}
          </span>
        </div>
        
        <div class="p-4 md:p-6">
          <div class="space-y-4">
            ${order.items.map(item => `
              <div class="flex justify-between items-start group">
                <div class="flex items-center gap-3 md:gap-4">
                  <img src="${item.img}" class="w-10 h-10 md:w-14 md:h-14 object-cover rounded-xl border border-neutral-100" />
                  <div>
                    <p class="font-bold text-neutral-800 text-xs md:text-sm group-hover:text-yellow-600 transition-colors">${item.name}</p>
                    <p class="text-[10px] md:text-xs text-neutral-500">${item.size} m² • 1 Sesi</p>
                  </div>
                </div>
                <div class="text-right">
                    <p class="font-bold text-neutral-800 text-xs md:text-sm">Rp ${item.price.toLocaleString('id-ID')}</p>
                </div>
              </div>
            `).join('')}
          </div>
          
          <div class="mt-4 md:mt-6 pt-4 md:pt-6 border-t border-neutral-100 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
            <div class="flex items-center gap-2 text-neutral-500 order-2 md:order-1">
               <div class="i-tabler-calendar text-base md:text-lg"></div>
               <p class="text-[11px] md:text-xs font-medium">${new Date(order.date).toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' })}</p>
            </div>
            
            <div class="flex items-center justify-between md:justify-end w-full md:w-auto gap-4 md:gap-6 order-1 md:order-2">
                <div class="text-left md:text-right">
                  <p class="text-[9px] md:text-[10px] text-neutral-400 uppercase font-bold">Total Pembayaran</p>
                  <p class="text-lg md:text-xl font-black text-neutral-900 leading-none">Rp ${order.total.toLocaleString('id-ID')}</p>
                </div>
                <button class="p-2 bg-neutral-100 hover:bg-neutral-200 rounded-xl transition-colors shrink-0">
                    <div class="i-tabler-chevron-right text-neutral-600"></div>
                </button>
            </div>
          </div>
        </div>
      </div>
    `).join('');
  }

  renderHistory();
</script>