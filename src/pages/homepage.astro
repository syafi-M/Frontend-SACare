---
// src/pages/index.astro
// Import komponen yang sudah dibuat sebelumnya
import Layout from "../layouts/Layout.astro";

// Pastikan Anda telah menginstal semua paket ikon yang digunakan
// npm install -D @iconify-json/tabler @iconify-json/lucide
---
 
<Layout>
        <!-- Main Content Area (Tambahkan pb-24 agar konten tidak tertutup bottom nav) -->
        <main class="p-6 pb-28">
            <!-- 1. Banner Section (Modern Home Solutions) -->
            <!-- Meniru gradient dan shape dari gambar -->
            <div
                class="relative p-6 rounded-xl shadow-lg bg-gradient-to-br from-orange-200 to-pink-200 overflow-hidden"
            >
                <!-- Shape placeholder di background (di gambar terlihat seperti siluet orang) -->
                <div
                    class="absolute right-0 top-0 h-40 w-40 bg-white opacity-40 rounded-full transform translate-x-1/4 -translate-y-1/4"
                >
                </div>
                <div
                    class="absolute left-0 top-0 min-w-full min-h-full bg-gradient-to-r from-amber-700/40 to-transparent"
                >
                </div>

                <div
                    class="relative flex items-start justify-center flex-col text-start"
                    style="font-family: 'Montserrat Variable', sans-serif;"
                >
                    <h2 class="text-2xl font-bold text-neutral-100 mb-2">
                        Modern Home Solutions.
                    </h2>
                    <p class="text-neutral-100 mb-2">
                        Simplify your lifestyle.
                    </p>
                </div>
            </div>

            <!-- 2. Services Section -->
            <section class="mt-8">
                <div class="flex justify-between items-center mb-8">
                    <h3 class="text-xl font-bold text-gray-800">Services</h3>
                    <a href="#" class="text-sm text-neutral-600 hover:underline"
                        >VIEW ALL</a
                    >
                </div>

                <!-- Grid of service icons -->
                <div class="grid grid-cols-4 gap-4 text-center mb-8">
                    <!-- Item Cleaning -->
                    <div class="flex flex-col items-center">
                        <div
                            class="i-lucide-lab-broom text-2xl p-3 rounded-lg shadow-sm"
                        >
                        </div>
                        <span class="text-xs mt-2 text-gray-600 uppercase"
                            >Cleaning</span
                        >
                    </div>
                    <!-- Item AC Repair -->
                    <div class="flex flex-col items-center">
                        <div
                            class="i-tabler-snowflake text-2xl p-3 rounded-lg shadow-sm"
                        >
                        </div>
                        <span class="text-xs mt-2 text-gray-600 uppercase"
                            >AC Repair</span
                        >
                    </div>
                    <!-- Item Plumbing -->
                    <div class="flex flex-col items-center">
                        <div
                            class="i-mdi-pipe-leak text-2xl p-3 rounded-lg shadow-sm"
                        >
                        </div>
                        <span class="text-xs mt-2 text-gray-600 uppercase"
                            >Plumbing</span
                        >
                    </div>
                    <!-- Item Electric -->
                    <div class="flex flex-col items-center">
                        <div
                            class="i-tabler-plug-connected text-2xl p-3 rounded-lg shadow-sm"
                        >
                        </div>
                        <span class="text-xs mt-2 text-gray-600 uppercase"
                            >Electric</span
                        >
                    </div>
                </div>
            </section>

            <!-- 3. Popular Choice Section -->
            <section class="mt-8">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-xl font-bold text-gray-800">
                        Popular Choice
                    </h3>
                    <span
                        class="bg-yellow-400 text-xs font-bold py-1 px-3 rounded-full"
                        >TOP RATED</span
                    >
                </div>

                <!-- Service Card (Full Home Cleaning) -->
                <div
                    class="bg-white p-4 rounded-xl border border-gray-200 flex items-center space-x-4"
                >
                    <!-- Image Placeholder -->
                    <div
                        class="w-20 h-20 bg-gray-200 rounded-lg flex items-center justify-center overflow-hidden"
                    >
                        <!-- Placeholder Gambar Sapu dari Iconify -->
                        <div class="i-tabler-brush text-5xl text-gray-800">
                        </div>
                    </div>

                    <!-- Service Details -->
                    <div class="flex-grow">
                        <div class="flex justify-between items-start">
                            <h4 class="text-base font-semibold text-gray-800">
                                Full Home Cleaning
                            </h4>
                            <span
                                class="text-sm font-semibold ml-2 text-center flex items-center gap-x-1"
                                ><i
                                    class="i-tabler-star-filled text-xs text-yellow-500"
                                ></i>4.8</span
                            >
                        </div>
                        <p class="text-xs text-gray-500 mb-3">
                            Guarantees immaculate results, every time
                        </p>

                        <div class="flex justify-between items-center">
                            <div>
                                <p class="text-xs text-gray-500">
                                    Mulai dari Rp
                                </p>
                                <p class="text-xl font-bold text-neutral-800">
                                    150.000
                                </p>
                            </div>
                            <button
                                class="bg-neutral-800 text-white px-4 py-2 rounded-lg hover:bg-neutral-900 transition-colors"
                                >Book</button
                            >
                        </div>
                    </div>
                </div>
            </section>
        </main>
</Layout>
